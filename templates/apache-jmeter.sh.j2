#!/bin/bash
##
## 1.4 Running JMeter - Apache JMeter - User's Manual: Getting Started
## https://jmeter.apache.org/usermanual/get-started.html#running
##
## awt.useSystemAAFontSettings - System Properties for Java 2D Technology
## https://docs.oracle.com/javase/8/docs/technotes/guides/2d/flags.html#aaFonts
##
export JAVA_HOME="{{ java_home }}"
export JMETER_HOME="{{ jmeter_home }}"
export _JAVA_OPTIONS="-Dawt.useSystemAAFontSettings=on"
export PATH=${JAVA_HOME}/bin:/usr/local/apache-jmeter/bin:${PATH}
